<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="IndicatorStyle">
        <item name="android:gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginBottom">@dimen/indicator_and_center_margin</item>
    </style>

    <style name="CenterStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_centerVertical">true</item>
    </style>

	<style name="LogoStyle">
		<item name="android:layout_width">fill_parent</item>
		<item name="android:layout_height">wrap_content</item>
		<item name="android:paddingTop">10dip</item>
		<item name="android:src">@drawable/optimal_remote_logo</item>
	</style>

    <style name="TicketStyle" parent="CenterStyle">
        <item name="android:background">@drawable/optimal_remote_ticket_bg</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">32sp</item>
    </style>

    <style name="TextStyle" parent="IndicatorStyle">
        <item name="android:textColor">@android:color/black</item>
    </style>

    <style name="CancelButtonStyle" parent="CenterStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>
</resources>
